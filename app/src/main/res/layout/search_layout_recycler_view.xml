<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <GridLayout
        android:id="@+id/secondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        >

        <ImageView
            android:id="@+id/r2img1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:cropToPadding="true"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:scaleType="centerCrop"


            android:src="@drawable/laughter_club_post" />

        <ImageView
            android:id="@+id/r2img2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"

            android:src="@drawable/laughter_club_post"/>
        <ImageView
            android:id="@+id/r2img3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"

            android:src="@drawable/laughter_club_post"/>

        <ImageView
            android:id="@+id/r3img1"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"

            android:src="@drawable/laughter_club_post"/>

        <ImageView
            android:id="@+id/r3img2"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"

            android:src="@drawable/laughter_club_post"/>

        <ImageView
            android:id="@+id/r3img3"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:paddingTop="3dp"
            android:paddingLeft="3dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"

            android:src="@drawable/laughter_club_post"/>
    </GridLayout>
    <LinearLayout
        android:id="@+id/thirdLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondLine"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/r4img1"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:src="@drawable/laughter_club_post"
            android:paddingTop="3dp"
            android:scaleType="centerCrop"
            android:paddingLeft="3dp"/>

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/r4img2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:background="@drawable/border_image"

                android:src="@drawable/bunny" />
            <ImageView
                android:id="@+id/r4img3"
                android:layout_width="140dp"
                android:layout_height="140dp"

                android:paddingTop="3dp"
                android:paddingLeft="3dp"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:background="@drawable/border_image"

                android:src="@drawable/prabhas" />

        </LinearLayout>

    </LinearLayout>
    <GridLayout
        android:id="@+id/fourthLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="3"
        android:layout_below="@+id/thirdLine"
        >

        <ImageView
            android:id="@+id/r5img1"
            android:layout_width="140dp"
